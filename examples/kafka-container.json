{
    "name": "kafka",
    "description": "Example Kafka Container (with embedded Zookeeper)",
    "properties": {
      "network": "default",
      "num_instances": 0,
      "secrets": [],
      "image": "spotify/kafka",
      "health_checks": [],
      "force_pull": false,
      "volumes": [],
      "container_type": "DOCKER",
      "labels": {},
      "cpus": 1,
      "port_mappings": [
        {
          "protocol": "tcp",
          "container_port": 9092,
          "service_port": 0,
          "name": "service-api",
          "expose_endpoint": true
        }
      ],
      "env": {
        "ADVERTISED_HOST": "kafka",
        "ADVERTISED_PORT": "9092"
      },
      "memory": 1024
    }
  }